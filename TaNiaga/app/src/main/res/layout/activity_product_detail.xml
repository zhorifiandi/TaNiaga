<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cidoeq.taniaga.ProductDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_title_product_detail"
        android:background="#01a79d"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/button_back_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:padding="17dp"
            android:src="@drawable/left_arrow"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:text="Detail Produk"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_title_product_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/solid_gray"
            android:id="@+id/image_detail_detailed"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/text_nama_produk_detailed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_harga_produk_detailed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/text_category_produk_detailed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/text_penjual_produk_detailed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear_header"
        android:id="@+id/linear_footer"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_description_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_detail_description_detailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="21sp"
                android:gravity="center|center"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/rounded_text_detail_message"
            android:id="@+id/linear_specify_buy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:inputType="phone"
                android:id="@+id/edit_quantity"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kg"
                android:textSize="20sp"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/text_total_bayar_on_detailed"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="Total: Rp "
                android:textSize="20sp"
                android:gravity="center|left"/>

            <Button
                android:id="@+id/button_buy"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button_register"
                android:text="Beli"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
