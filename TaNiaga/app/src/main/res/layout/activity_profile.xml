<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f4"
    tools:context="cidoeq.taniaga.Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_title_profile"
        android:background="#01a79d"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/button_backtologin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:padding="17dp"
            android:src="@drawable/left_arrow"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:text="Profil"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/rounded_button"
        android:layout_below="@+id/linear_title_profile"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:id="@+id/linear_profile_fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_image">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nama Lengkap"
            android:paddingLeft="30dp"
            android:gravity="center|left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="Ari Pratama Zhorifiandi"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/linear_profile_fullname"/>
    <LinearLayout
        android:id="@+id/linear_profile_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linear_profile_fullname">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Email"
            android:paddingLeft="30dp"
            android:gravity="center|left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="zhorifiandi@gmail.com"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/linear_profile_email"/>
    <LinearLayout
        android:id="@+id/linear_profile_no_hp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linear_profile_email">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No HP"
            android:paddingLeft="30dp"
            android:gravity="center|left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="081818181818"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/linear_profile_no_hp"/>
    <LinearLayout
        android:id="@+id/linear_profile_jenis"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linear_profile_no_hp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Jenis Akun"
            android:paddingLeft="30dp"
            android:gravity="center|left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="Mitra Trani"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button_logout"
        android:text="Keluar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/linear_profile_jenis" />


</RelativeLayout>
