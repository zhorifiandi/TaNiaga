<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f4"
    tools:context="cidoeq.taniaga.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_titlesignup"
        android:background="#01a79d"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:padding="17dp"
            android:src="@drawable/left_arrow"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:text="@string/register"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_below="@+id/linear_titlesignup"
        android:id="@+id/linear_signup_fullname"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:paddingEnd="30dp"
        android:orientation="horizontal"
        android:gravity="top">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:text="Nama Lengkap" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="@drawable/rounded_edit_text_register"
                android:gravity="center|left"
                android:hint="nama anda"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_signup_email"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingEnd="30dp"
        android:layout_below="@+id/linear_signup_fullname">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:text="Email"/>

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_edit_text_register"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:hint="email@example.com"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_signup_password"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingEnd="30dp"
        android:layout_below="@+id/linear_signup_email">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:text="Kata Sandi"/>

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:background="@drawable/rounded_edit_text_register"
                android:paddingLeft="10dp"
                android:layout_weight="3"
                android:hint="*********"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_signup_id"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingEnd="30dp"
        android:layout_below="@+id/linear_signup_password">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:text="Nomor HP"/>

            <EditText
                android:id="@+id/edit_no_hp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="@drawable/rounded_edit_text_register"
                android:gravity="center|left"
                android:hint="08XXXXXXXXXX"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_signup_address"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingEnd="30dp"
        android:layout_below="@+id/linear_signup_id">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:text="Alamat"/>

            <EditText
                android:id="@+id/edit_alamat_register"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="@drawable/rounded_edit_text_register"
                android:gravity="center|left"
                android:hint="Dago, Bandung, Jawa Barat."
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_signup_type"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"
        android:paddingEnd="30dp"
        android:layout_below="@+id/linear_signup_address"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:text="Jenis Akun"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_jenis_akun"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp">
            </Spinner>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/rounded_button_register"
        android:text="Daftarkan"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_below="@+id/linear_signup_type"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
