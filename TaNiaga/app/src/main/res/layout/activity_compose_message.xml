<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cidoeq.taniaga.ComposeMessage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_title_compose"
        android:background="#01a79d"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/button_backtologin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:padding="17dp"
            android:src="@drawable/left_arrow"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:text="Buat Pesan"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/edit_compose"
        android:layout_below="@+id/linear_title_compose"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:gravity="start"
        android:lines="10"/>
    <Button
        android:id="@+id/button_compose"
        android:layout_below="@id/edit_compose"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Kirim"/>
</RelativeLayout>
